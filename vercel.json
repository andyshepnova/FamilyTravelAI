{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build:web",
  "outputDirectory": "client/dist",
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "client/dist/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
